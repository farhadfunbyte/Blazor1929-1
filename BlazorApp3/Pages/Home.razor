                new Person() { Id = 2, Name = "<i>ccccc<i>", Family = "dddd" },
                new Person() { Id = 3, Name = "<u>eeeeee</u>", Family = "fffff" }
            ];

    }


    private void AddItem()
    {
        Console.WriteLine("Item Added!");
        a++;
    }

    private void Delete(Person person)
    {
        people.Remove(person);
    }


